<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputdataActivityIn"
    android:padding="20dp">



    <TextView
        android:id="@+id/txt_inputcal"
        android:layout_margin="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calories IN !"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textColor="@color/biruungu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:background="@drawable/edittextstyle1"
        android:paddingHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:id="@+id/edit_text_food_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Food Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_inputcal" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:id="@+id/layout_calori_type"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_cal"
        tools:layout_editor_absoluteX="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="In Calory Type : " />

        <Spinner
            android:id="@+id/spinner_tipe_kalori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/edit_text_cal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/edittextstyle1"
        android:hint="Calorie Amount"
        android:paddingHorizontal="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_food_name" />


    <Button
        android:textColor="@color/white"
        android:background="@drawable/buttonstyle5"
        android:id="@+id/btn_back_in"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:layout_marginBottom="110dp"/>

    <Button
        android:textColor="@color/white"
        android:background="@drawable/buttonstyle1"
        android:id="@+id/btn_done_in"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Done"
        android:layout_marginBottom="50dp"/>

    <TimePicker
        android:id="@+id/time_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:timePickerMode="spinner"
        app:layout_constraintTop_toBottomOf="@+id/layout_calori_type"
        tools:layout_editor_absoluteX="20dp" />










</androidx.constraintlayout.widget.ConstraintLayout>